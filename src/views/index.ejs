<!DOCTYPE html>
<html lang="pt-br>">

	<head>
		<title>QUADRO DE PRESENÇA</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width">
		<link rel="shortcut icon" href="/platinas/brasao_sgm.png" type="image/png">
		
		<link href="/styles/style.css" rel="stylesheet" type="text/css" />
	</head>

	<body onload="init()">
		<header>
			<h1>Quadro de Presença<br>Secretaria-Geral Marinha</h1>
		</header>
		<main class="teste">	
			<section class="container-esquerda">
				<ul class="coluna-left" id="col-esq">
					<% oficiais.forEach((oficial, index) => { %>
						<% if(index < oficiais.length / 2) {%> 
							<li class="card">
								<img class="li-img" src="/platinas/<%= oficial.posto %>-<%= oficial.quadro %>.png">
								<div class="card-content">
									<h3 class="text"><%= oficial.posto %> <%= oficial.quadro === 'ARM' ? ' ' : '('+oficial.quadro+')' %> <%= oficial.nome %></h3>
									<div class="liga-desliga">
										<input type="checkbox" class="liga-desliga__checkbox" id="liga-desliga<%= oficial.id %>">
										<label for="liga-desliga<%= oficial.id %>" class="liga-desliga__botao"></label>
									</div>
								</div>
							</li>
						<% } %> 
					<% }) %> 
				</ul>
			</section>
			<section class="container-direita">
				<ul class="coluna-right" id="col-dir">
					<% oficiais.forEach((oficial, index) => { %>
						<% if(index >= (oficiais.length / 2)) {%> 
							<li class="card">
								<img class="li-img" src="/platinas/<%= oficial.posto %>-<%= oficial.quadro %>.png">
								<div class="card-content">
									<h3 class="text"><%= oficial.posto %> <%= oficial.quadro === 'ARM' ? ' ' : '('+oficial.quadro+')' %> <%= oficial.nome %></h3>
									<div class="liga-desliga">
										<input type="checkbox" class="liga-desliga__checkbox" id="liga-desliga<%= oficial.id %>">
										<label for="liga-desliga<%= oficial.id %>" class="liga-desliga__botao"></label>
									</div>
								</div>
							</li>
						<% } %> 
					<% }) %> 
				</ul>
			</section>
		</main>

		<footer>
			<div class="date-time">
				<span id="Clock">00:00:00</span>
				<p class="data"></p>
			</div>
		</footer>

		<script src="/scripts/script.js"></script>
    </body>
</html>